<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dundeeuni.Alistair.cvdvision"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/menu"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dundeeuni.Alistair.cvdvision.CVDVisionActivity"
            android:label="@string/menu" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dundeeuni.Alistair.cvdvision.OpenCV"
            android:label="@string/app_name" 
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.dundeeuni.Alistair.cvdvision.UserGuide"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.dundeeuni.Alistair.colouredCs.ColouredCActivity"
            android:label="@string/title_activity_coloured_c" >
        </activity>
    </application>

</manifest>
